#!/bin/sh
. /etc/rc.conf

workdir="${cbsd_workdir}"
globalconf="${workdir}/cbsd.conf";

if [ ! -f "${globalconf}" ]; then
    echo "no globalconf file"
    exit 1
fi

. ${globalconf}
. ${subr}
. ${inventory}
. ${color}
. ${strings}

export PATH=${PATH}:/usr/local/bin:/usr/local/sbin/

jails_stop() {
    for jname in $(/usr/local/bin/cbsd jorder); do
	. ${jrcconf}
	[ ${jid} -eq 0 ] && continue
	stoppid="${ftmpdir}/stop.${jname}.$$"
	if [ "${emulator}" = "bhyve" ]; then
		$ECHO "${MAGENTA}Auto-stop jail: ${GREEN}${jname}${NORMAL}"
		/usr/sbin/daemon -p ${stoppid} /usr/local/bin/cbsd bstop jname=${jname}
	else
		/usr/sbin/daemon -p ${stoppid} /usr/local/bin/cbsd jstop jname=${jname}
	fi
	# lets save .pid file
	sleep 1
	[ -f "${stoppid}" ] && PID=$(cat ${stoppid} 2>/dev/null)
	[ -n "${PID}" ] && /usr/local/bin/cbsd cbsd_pwait --pid=$(cat ${stoppid}) --timeout=${parallel}
    done

    wait_for_jstop
}

jails_start() {
    for jname in $(/usr/local/bin/cbsd jorder); do
	. ${jrcconf}
	[ ${astart} -ne 1 ] && continue
	startpid="${ftmpdir}/jstart.${jname}.$$"
	if [ "${emulator}" = "bhyve" ]; then
	    ${ECHO} "${MAGENTA}Auto-start for bhyve not implemented yet${NORMAL}"
	    continue
#	    /usr/sbin/daemon -p ${startpid} /usr/local/bin/cbsd bstart inter=0 jname=${jname}
	else
	    /usr/sbin/daemon -p ${startpid} /usr/local/bin/cbsd jstart inter=0 jname=${jname}
	fi
	# lets save .pid file
	sleep 1
	[ -f "${startpid}" ] && PID=$(cat ${startpid} 2>/dev/null)
	[ -n "${PID}" ] && /usr/local/bin/cbsd cbsd_pwait --pid=$(cat ${startpid}) --timeout=${parallel}
    done

    wait_for_jstart
}

#### MAIN ####
case $1 in
    start) jails_start ;;
    stop) jails_stop ;;
esac
